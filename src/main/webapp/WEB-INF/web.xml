<?xml version = '1.0' encoding = 'utf-8'?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
         http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

  <listener>
    <listener-class>mobi.eyeline.ips.web.InitListener</listener-class>
  </listener>


  <session-config>
    <session-timeout>1000</session-timeout>
  </session-config>

  <!-- ===================================== CONTEXT INITIALIZATION ======================================== -->

  <context-param>
    <param-name>javax.faces.PROJECT_STAGE</param-name>
    <param-value>Development</param-value>
  </context-param>

  <context-param>
    <param-name>facelets.DEVELOPMENT</param-name>
    <param-value>${ips.force.resource.reload}</param-value>
  </context-param>

  <context-param>
    <param-name>javax.faces.CONFIG_FILES</param-name>
    <param-value>/WEB-INF/faces-config.xml</param-value>
  </context-param>


  <context-param>
    <param-name>javax.faces.FACELETS_REFRESH_PERIOD</param-name>
    <param-value>0</param-value>
  </context-param>

  <context-param>
    <param-name>javax.faces.FACELETS_LIBRARIES</param-name>
    <param-value>/WEB-INF/ips.taglib.xml</param-value>
  </context-param>

  <context-param>
    <description>Use documents saved as *.xhtml for Facelets</description>
    <param-name>javax.faces.DEFAULT_SUFFIX</param-name>
    <param-value>.xhtml</param-value>
  </context-param>

  <context-param>
    <param-name>javax.faces.VIEW_MAPPINGS</param-name>
    <param-value>*.xhtml</param-value>
  </context-param>

  <context-param>
    <param-name>facelets.BUILD_BEFORE_RESTORE</param-name>
    <param-value>false</param-value>
  </context-param>

  <context-param>
    <param-name>facelets.RECREATE_VALUE_EXPRESSION_ON_BUILD_BEFORE_RESTORE</param-name>
    <param-value>false</param-value>
  </context-param>

  <context-param>
    <description>Use server-side state saving</description>
    <param-name>javax.faces.STATE_SAVING_METHOD</param-name>
    <param-value>server</param-value>
  </context-param>

  <context-param>
    <param-name>javax.faces.FACELETS_SKIP_COMMENTS</param-name>
    <param-value>true</param-value>
  </context-param>

  <context-param>
    <param-name>javax.faces.VALIDATE_EMPTY_FIELDS</param-name>
    <param-value>false</param-value>
  </context-param>

  <context-param>
    <param-name>javax.faces.PARTIAL_STATE_SAVING</param-name>
    <param-value>false</param-value>
  </context-param>

  <!-- =============================================== FILTERS ===================================================== -->


  <filter>
    <filter-name>lessFilter</filter-name>
    <filter-class>mobi.eyeline.ips.util.LessFilter</filter-class>
  </filter>

  <filter>
    <filter-name>css</filter-name>
    <filter-class>mobi.eyeline.ips.web.ResourceFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>lessFilter</filter-name>
    <url-pattern>*.less</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>css</filter-name>
    <url-pattern>*</url-pattern>
  </filter-mapping>

  <!-- =============================================== SERVLETS ==================================================== -->

  <servlet>
    <description>Faces servlet</description>
    <servlet-name>faces</servlet-name>
    <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
    <multipart-config>
      <location>/tmp</location>
      
      <max-file-size>20848820</max-file-size>
      
      <!-- 5Mb -->
      <max-request-size>5242880</max-request-size>

      <!-- 100Mb -->
      <file-size-threshold>104857600</file-size-threshold>
    </multipart-config>
  </servlet>

  <servlet>
    <description>Servlet for delivery notifications</description>
    <servlet-name>deliveryNotification</servlet-name>
    <servlet-class>mobi.eyeline.ips.web.servlets.DeliveryNotificationServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>deliveryNotification</servlet-name>
    <url-pattern>/inform/*</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>faces</servlet-name>
    <url-pattern>*.faces</url-pattern>
  </servlet-mapping>


  <!-- ======================================= PAGES =============================================================== -->

  <welcome-file-list>
    <welcome-file>enter.faces</welcome-file>
  </welcome-file-list>

  <login-config>
    <auth-method>FORM</auth-method>
    <form-login-config>
      <form-login-page>/login.faces</form-login-page>
      <form-error-page>/login.faces?loginError=true</form-error-page>
    </form-login-config>
  </login-config>

  <!-- ======================================== SECURITY =========================================================== -->

  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Страница редиректа</web-resource-name>
      <url-pattern>/enter.faces</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>admin</role-name>
      <role-name>manager</role-name>
      <role-name>client</role-name>
    </auth-constraint>
    <user-data-constraint>
      <transport-guarantee>NONE</transport-guarantee>
    </user-data-constraint>
  </security-constraint>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Clients list</web-resource-name>
      <url-pattern>/pages/clients/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>

      <role-name>manager</role-name>
    </auth-constraint>
    <user-data-constraint>
      <transport-guarantee>NONE</transport-guarantee>
    </user-data-constraint>
  </security-constraint>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Surveys list/modification/stats</web-resource-name>
      <url-pattern>/pages/surveys/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>client</role-name>
      <role-name>manager</role-name>
    </auth-constraint>
    <user-data-constraint>
      <transport-guarantee>NONE</transport-guarantee>
    </user-data-constraint>
  </security-constraint>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Surveys list/modification/stats</web-resource-name>
      <url-pattern>/profilepage.faces</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>admin</role-name>
      <role-name>manager</role-name>
      <role-name>client</role-name>
    </auth-constraint>
    <user-data-constraint>
      <transport-guarantee>NONE</transport-guarantee>
    </user-data-constraint>
  </security-constraint>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name>C2S numbers</web-resource-name>
      <url-pattern>/pages/admin/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>admin</role-name>
      <role-name>manager</role-name>
    </auth-constraint>
    <user-data-constraint>
      <transport-guarantee>NONE</transport-guarantee>
    </user-data-constraint>
  </security-constraint>


  <security-role>
    <description>Администратор</description>
    <role-name>admin</role-name>
  </security-role>

  <security-role>
    <description>Менеджер</description>
    <role-name>manager</role-name>
  </security-role>

  <security-role>
    <description>Клиент</description>
    <role-name>client</role-name>
  </security-role>

  <!-- ============================================= ERROR PAGES ============================================= -->

  <error-page>
    <error-code>403</error-code>
    <location>/error.jsp?id=403</location>
  </error-page>

  <error-page>
    <error-code>404</error-code>
    <location>/error.jsp?id=404</location>
  </error-page>

  <error-page>
    <error-code>500</error-code>
    <location>/error.jsp?id=500</location>
  </error-page>

  <error-page>
    <error-code>408</error-code>
    <location>/enter.faces</location>
  </error-page>

  <error-page>
    <error-code>400</error-code>
    <location>/error.jsp?id=400</location>
  </error-page>

</web-app>