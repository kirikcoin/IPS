<?xml version="1.0"?>
<!DOCTYPE faces-config PUBLIC
        "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.2//EN"
        "http://java.sun.com/dtd/web-facesconfig_1_1.dtd" >

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
              version="2.0">

  <lifecycle>
    <phase-listener>mobi.eyeline.ips.web.SessionPhaseListener</phase-listener>
  </lifecycle>

  <application>
    <locale-config>
      <default-locale>ru</default-locale>
      <supported-locale>ru</supported-locale>
      <supported-locale>en</supported-locale>
    </locale-config>

    <resource-bundle>
      <base-name>ips</base-name>
      <var>bundle</var>
    </resource-bundle>
  </application>

  <!-- BEANS ======================================================================================================= -->

  <managed-bean>
    <managed-bean-name>userSession</managed-bean-name>
    <managed-bean-class>mobi.eyeline.ips.web.controllers.login.UserSessionController</managed-bean-class>
    <managed-bean-scope>session</managed-bean-scope>
  </managed-bean>

  <managed-bean>
    <managed-bean-name>localeController</managed-bean-name>
    <managed-bean-class>mobi.eyeline.ips.web.controllers.LocaleController</managed-bean-class>
    <managed-bean-scope>session</managed-bean-scope>
  </managed-bean>

  <managed-bean>
    <managed-bean-name>login</managed-bean-name>
    <managed-bean-class>mobi.eyeline.ips.web.controllers.login.LoginPageController</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>

  <managed-bean>
    <managed-bean-name>passwordResetController</managed-bean-name>
    <managed-bean-class>mobi.eyeline.ips.web.controllers.login.PasswordResetController</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>

  <managed-bean>
    <managed-bean-name>surveyListController</managed-bean-name>
    <managed-bean-class>mobi.eyeline.ips.web.controllers.surveys.SurveyListController</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>

  <managed-bean>
    <managed-bean-name>surveySettingsController</managed-bean-name>
    <managed-bean-class>mobi.eyeline.ips.web.controllers.surveys.SurveySettingsController</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>

  <managed-bean>
    <managed-bean-name>surveyResultsController</managed-bean-name>
    <managed-bean-class>mobi.eyeline.ips.web.controllers.surveys.SurveyResultsController</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>

  <managed-bean>
    <managed-bean-name>surveyStatsController</managed-bean-name>
    <managed-bean-class>mobi.eyeline.ips.web.controllers.surveys.SurveyStatsController</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>

  <managed-bean>
    <managed-bean-name>surveyInvitesController</managed-bean-name>
    <managed-bean-class>mobi.eyeline.ips.web.controllers.surveys.SurveyInvitesController</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>

  <managed-bean>
    <managed-bean-name>clientController</managed-bean-name>
    <managed-bean-class>mobi.eyeline.ips.web.controllers.clients.ClientController</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>

  <managed-bean>
    <managed-bean-name>profilePageController</managed-bean-name>
    <managed-bean-class>mobi.eyeline.ips.web.controllers.profile.ProfilePageController</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>

  <managed-bean>
    <managed-bean-name>clientListController</managed-bean-name>
    <managed-bean-class>mobi.eyeline.ips.web.controllers.clients.ClientListController</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>

  <!-- VALIDATION ================================================================================================== -->

  <validator>
    <validator-id>email</validator-id>
    <validator-class>mobi.eyeline.ips.web.validators.EmailValidator</validator-class>
  </validator>

  <validator>
    <validator-id>loginPasswordValidator</validator-id>
    <validator-class>mobi.eyeline.ips.web.validators.LoginPasswordValidator</validator-class>
  </validator>

  <!-- COMPONENTS ================================================================================================== -->

  <component>
    <component-type>mobi.eyeline.ips.web.components.input_text</component-type>
    <component-class>mobi.eyeline.ips.web.components.input_text.InputText</component-class>
  </component>

  <!-- NAVIGATION ================================================================================================== -->

  <navigation-rule>
    <description>Навигация срабатывает при нажатии кнопки Login на странице входа</description>
    <navigation-case>
      <from-outcome>LOGIN</from-outcome>
      <to-view-id>/enter.jsp</to-view-id>
      <redirect/>
    </navigation-case>
  </navigation-rule>

  <navigation-rule>
     <description>Восстановление пароля</description>
     <navigation-case>
       <from-outcome>RECOVERY_PASSWORD</from-outcome>
       <to-view-id>/passwordreset.xhtml</to-view-id>
       <redirect/>
      </navigation-case>

      <navigation-case>
        <from-outcome>RETRY_RECOVERY</from-outcome>
        <to-view-id>/passwordreset.faces?recovery=false</to-view-id>
        <redirect/>
      </navigation-case>

      <navigation-case>
        <from-outcome>DONE_RECOVERY</from-outcome>
        <to-view-id>/login.faces?recovery=true</to-view-id>
        <redirect/>
      </navigation-case>
  </navigation-rule>

  <navigation-rule>
    <description>Страница профиля</description>
    <navigation-case>
      <from-outcome>PROFILE</from-outcome>
      <to-view-id>/profilepage.xhtml</to-view-id>
      <redirect/>
    </navigation-case>
  </navigation-rule>

  <navigation-rule>
    <description>Survey list</description>
    <navigation-case>
      <from-outcome>SURVEY_LIST</from-outcome>
      <to-view-id>/pages/surveys/index.xhtml</to-view-id>
      <redirect/>
    </navigation-case>
  </navigation-rule>

  <navigation-rule>
    <description>Survey settings</description>
    <navigation-case>
      <from-outcome>SURVEY_SETTINGS</from-outcome>
      <to-view-id>/pages/surveys/settings.xhtml</to-view-id>
      <redirect/>
    </navigation-case>
  </navigation-rule>

  <navigation-rule>
    <description>Survey results</description>
    <navigation-case>
      <from-outcome>SURVEY_RESULTS</from-outcome>
      <to-view-id>/pages/surveys/results.xhtml</to-view-id>
      <redirect/>
    </navigation-case>
  </navigation-rule>

  <navigation-rule>
    <description>Survey statistics</description>
    <navigation-case>
      <from-outcome>SURVEY_STATS</from-outcome>
      <to-view-id>/pages/surveys/statistics.xhtml</to-view-id>
      <redirect/>
    </navigation-case>
  </navigation-rule>

  <navigation-rule>
    <description>Survey results</description>
    <navigation-case>
      <from-outcome>SURVEY_INVITES</from-outcome>
      <to-view-id>/pages/surveys/invitations.xhtml</to-view-id>
      <redirect/>
    </navigation-case>
  </navigation-rule>

  <navigation-rule>
    <description>Clients list</description>
    <navigation-case>
      <from-outcome>CLIENT_LIST</from-outcome>
      <to-view-id>/pages/clients/index.xhtml</to-view-id>
      <redirect/>
    </navigation-case>
  </navigation-rule>

  <navigation-rule>
    <description>Блокирование/разблокирование пользователя на странице заказчиков</description>

    <navigation-case>
      <from-outcome>DONE_BLOCK</from-outcome>
      <to-view-id>/pages/clients/index.xhtml</to-view-id>
      <redirect/>
    </navigation-case>

    <navigation-case>
      <from-outcome>ERROR_BLOCK</from-outcome>
      <to-view-id>/passwordreset.faces?recovery=false</to-view-id>
      <redirect/>
    </navigation-case>

    <navigation-case>
      <from-outcome>DONE_UNBLOCK</from-outcome>
      <to-view-id>/pages/clients/index.xhtml</to-view-id>
      <redirect/>
    </navigation-case>

    <navigation-case>
      <from-outcome>ERROR_UNBLOCK</from-outcome>
      <to-view-id>/passwordreset.faces?recovery=false</to-view-id>
      <redirect/>
    </navigation-case>


  </navigation-rule>

</faces-config>